[Unit]
Description=Bluesky suitcase worker service
StartLimitIntervalSec=1400
StartLimitBurst=7200

[Service]
User=softioc
Group=softioc
SyslogIdentifier=bluesky-suitcase-worker
TimeoutStartSec=2
Restart=always
# Restart=on-failure
RestartSec=5s
# WorkingDirectory=<something>
ExecStart=${BS_ENV}/bin/python /nsls2/data/sst/rsoxs/shared/config/bluesky/collection_packages/sst-workers/suitcase_worker_nsls2data.py

[Install]
WantedBy=multi-user.target